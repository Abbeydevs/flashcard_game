generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id
  email          String    @unique
  hashedPassword String
  
  createdAt      DateTime  @default(now())
  
  sessions       Session[]

  userCardPerformances UserCardPerformance[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Module {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?

  decks       Deck[]
}

model Deck {
  id          String   @id @default(cuid())
  name        String
  description String?
  
  moduleId    String
  module      Module   @relation(fields: [moduleId], references: [id])

  cards       Card[]
  @@unique([moduleId, name]) 
}

model Card {
  id          String   @id @default(cuid())
  question    String
  options     Json     
  explanation String?
  reference   String? 
  difficulty  Int      @default(1)
  
  deckId      String
  deck        Deck     @relation(fields: [deckId], references: [id])

  

  userCardPerformances UserCardPerformance[]
}

model UserCardPerformance {
  id        String   @id @default(cuid())
  userId    String
  cardId    String
  
  status    CardStatus @default(NEW)
  score     Int        @default(0)
  lastSeen  DateTime   @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@unique([userId, cardId])
}

enum CardStatus {
  NEW
  LEARNING
  REVIEW
  MASTERED
}